{
    "name": "RMRC Pi Pico Container",
    //"build": {
    //    "dockerfile": "Dockerfile",
    //    "context": ".."
    //},
    "image": "franc0r/francor_rmrc_pico_microros:latest",
    "remoteUser": "vscode",
    "privileged": false,
    "customizations": {
        "vscode": {
            "extensions": [
                "xaver.clang-format",
                "llvm-vs-code-extensions.vscode-clangd"
            ]
        }
    },
    "mounts": [
        "source=/var/run/media/${localEnv:USER},target=/var/run/media/vscode,type=bind,consistency=cached"
    ]
}